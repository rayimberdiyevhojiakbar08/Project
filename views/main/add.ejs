<%- include('../partial/navbar.ejs') %>
<div class="container" style="width: 40rem;">
    <form action="/add" method="post">
      <h1 style="color: #00FFFF;" class="text-center mt-3 container">Buyurtma Qo'shish</h1>
      <div class="mb-3">
      <label for="namesure" class="form-label" style="color: #00FFFF;">Ism Familya</label>
      <input type="text" class="form-control" id="namesure" name="namesure">
      
      </div>
      <div class="mb-3">
          <label for="number" class="form-label" style="color: #00FFFF;">Telefon raqami</label>
          <input type="tel" class="form-control" id="number" name="number">   
      </div>
      <div class="mb-3">
         <label for="adress" class="form-label" style="color: #00FFFF;">Manzil</label>
          <input type="text" class="form-control" id="adress" name="adress">
      </div>
      <div class="mb-3">
          <label for="day" class="form-label" style="color: #00FFFF;">Kun</label>
          <input type="date" class="form-control" id="day" name="day"> 
      </div>
      <div class="mb-3">
          <label for="time" class="form-label" style="color: #00FFFF;">Soat</label>
          <input type="time" class="form-control" id="time" name="time">       
      </div>
      <div class="mb-3">
          <label for="mastername" class="form-label" style="color: #00FFFF;">Ustaning ismi</label>
          <input type="text" class="form-control" id="mastername" name="mastername">  
      </div>
      <div class="mb-3">
          <label for="cost" class="form-label" style="color: #00FFFF;">Narxi</label>
          <input type="number" class="form-control" id="cost" name="cost">
         
      </div>
      <div class="mb-3 ">
        <label style="color: #00FFFF;">Kim kerak:</label>
          <input list="ordername" name="ordername"/>
          <datalist id="ordername">
            <option value="Santexnik">
            <option value="Elektirik">
            <option value="Plotnik">
          </datalist>   
      </div>
      <div class="mb-3 ">
        <label style="color: #00FFFF;">Buyurtma turi</label>
          <input list="ordertype" name="ordertype"/>
          <datalist id="ordertype">
            <option value="Online">
            <option value="Telefonda">
            <option value="Ofisga kelib">
          </datalist>
          
      </div>
        <button type="submit" class="btn btn-primary">Add</button>
    </form>
</div>